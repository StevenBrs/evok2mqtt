[Unit]
Description=EVOK to MQTT Daemon
After=evok.service

[Service]
Type=idle
ExecStart=/usr/bin/python /root/evok2mqtt/evok2mqtt.py > /var/log/evok2mqtt.log 2>&1
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=evok2mqtt

[Install]
WantedBy=multi-user.target
